<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">

    <session-factory>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Bank</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="by.me.data.entity.Account"/>
        <mapping class="by.me.data.entity.Card"/>
        <mapping class="by.me.data.entity.Credit"/>
        <mapping class="by.me.data.entity.Deposit"/>
        <mapping class="by.me.data.entity.Transferrcard"/>
        <mapping class="by.me.data.entity.User"/>
        <mapping class="by.me.data.entity.UserAddress"/>
        <mapping class="by.me.data.entity.UserDetails"/>


    </session-factory>

</hibernate-configuration>